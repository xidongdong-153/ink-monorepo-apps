{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        ".env",
        ".env.*",
        "**/.env",
        "**/.env.*",
        "**/tsconfig.json",
        "**/tsconfig.build.json"
    ],
    "globalEnv": ["NODE_ENV"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "api#dev": {
            "dependsOn": ["^build"]
        }
    }
}